<%-include("__header")%>
<h1 class="d-flex justify-content-center">NSR Admin Portal</h1>
<%-include("__logoAndNavAdminTestimonials")%>
<h1 class="testimonialHeader d-flex justify-content-center py-3 ">Testimonials:</h1>
<div class="hr-container d-flex justify-content-center">
    <hr class="gradient-hr-admin-heading">
 </div>

<!-- display records in datagrid -->
<div class="container-fluid mt-2">
 <div class="table-responsive">
    <button class="btn-create">Create</button>
  <table id="testimonials" class="table table-bordered table-striped nowrap">
    <thead>
        <tr>
            <th>ID</th>
            <th>Heading</th>
            <th>Content</th>
            <th>Date Created</th>
            <th>Actions</th>
           
        </tr>
    </thead>
    <tbody>
        <% processedData.forEach(function(row) { %>
            <tr>
                <td><%= row.id %></td>
                <td contenteditable="true"><%= row.heading %></td>
                <td contenteditable="true"><%= row.content %></td>
                <td><%= row.date_created %></td>
                
                <td>
                  <button class="btn btn-success save-testimonial" data-id="<%= row.id %>"><i class="fa-solid fa-floppy-disk" style="color: #e6e6e6;"></i></button>
                  <button class="btn btn-danger delete-testimonial" data-id="<%= row.id %>"><i class="fa-solid fa-trash" style="color: #ffffff;"></i></button>
                </td>
              
              </tr>
        <% }) %>
    </tbody>
</table>
 </div>
</div>
     

<%-include("__footer")%>